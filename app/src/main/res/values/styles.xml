<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomCaptureButton">
        <item name="android:background">@drawable/capture_button</item>
        <item name="android:src">@drawable/ic_camera</item>
    </style>

    <style name="CustomChangeButton">
        <item name="android:background">@drawable/change_cam</item>
        <item name="android:src">@drawable/ic_change_cam</item>
    </style>

</resources>
